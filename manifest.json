{
  "manifest_version": 2,

  "name": "To Voat We Go",

  "description": "Extension that lovingly redirects you to Voat when you visit Reddit.com.",

  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["*://www.reddit.com/*"],
      "js" : ["show.js"]
    }
  ],

  "background": {
    "scripts": ["popup.js"]
  },

  "permissions": [
    "activeTab", 
    "https://ajax.googleapis.com/", 
    "tabs"
  ],

  "homepage_url": "https://github.com/ohEmily/ToVoatWeGo"
}
